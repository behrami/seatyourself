<h1 class="label">Login</h1>

<div class="login form">

  <%= form_for :session, url: session_path do |f| %>

    <h3><%= f.label :email %>
        <%= f.text_field :email %></h3>

    <h3><%= f.label :password %>
        <%= f.password_field :password_digest %></h3>

    <h3><%= f.label :password_confirmation %>
        <%= f.password_field :password_digest %></h3>

    <h3><%= f.submit :submit %></h3>

  <% end %>

</div>
